{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "jsx": "react",
    "paths": {
      "actions": ["./actions/*", "./actions/index.js"],
      "common": ["./components/common/**/*", "./components/common/**/*/index.jsx"],
      "components": ["./components/**/*", "./components/**/*/index.jsx"],
      "constants": ["./constants", "./constants/index.js"],
      "data": ["./data/*", "./data/index.js"],
      "helpers": ["./helpers/*", "./helpers/index.js"],
      "reducers": ["./reducers/*", "./reducers/index.js"]
    }
  },
  "exclude": [ "node_modules" ]
}

